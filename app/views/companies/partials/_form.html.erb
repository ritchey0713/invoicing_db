<%= form_for @company do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, required: true %>

    <%= f.label :hourly_pay_rate %>
    <%= f.number_field :hourly_pay_rate, required: true %>

    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, required: true %>

    <%= f.label :website %>
    <%= f.text_field :website, required: true %>


    <%= f.submit "submit"%>
<% end %>